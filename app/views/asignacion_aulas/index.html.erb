<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    
    <div class="span4" glyphicon-plus>
            <h2 class="text-center text-muted">Asignacion Aulas</h2>
    
            <%= link_to new_asignacion_aula_path,  class: "btn btn-primary" do %>

              <i class="glyphicon glyphicon-plus"></i><% end %>

    </div>

    <div class="span 8">


      <table class="table table-striped">
        <thead>
          <tr>
            <th>Facultad</th>
            <th>Carrera</th>
            <th>AÃ±o</th>
            <th>Semestre</th>
            <th>Dias</th>
            <th>Aula</th>
            <th>Bloque</th>
            <th>Capacidad</th>
            <th>Observacion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>

          <% @asignacion_aulas.each do |a| %>
            <tr>
              <td><%= a.facultad.nombre %></td>
              <td><%= a.registro_carrera.nombreCarrera %></td>
              <td><%= a.anho_carrera.anho %></td>
              <td><%= a.semestre.nombreSemestre %></td>
              <td><%= a.observacion.nombreDia %></td>
              <td><%= a.aula.nombre %></td>
              <td><%= a.aula.bloque %></td>
              <td><%= a.aula.capacidad %></td>
              <td><%= a.aula.observacion %></td>

              <td><%= link_to a, class:"btn btn-success"  do %>
                  <i class="glyphicon glyphicon-eye-open"></i>
                 <% end %> </td>

              <td><%= link_to edit_asignacion_aula_path(a), class:" btn btn-info" do  %> 
                    <i class="glyphicon glyphicon-pencil"></i>
                  <% end %></td>


              <td><%= link_to a, method: :delete, data: { confirm: 'Estas Seguro?' }, class:'btn btn-danger' do %> 
                   <i class="glyphicon glyphicon-trash" ></i>
                <% end %></td>
            </tr> 
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>

      

