<p id="notice"><%= notice %></p>

<h1>Asignacion Aulas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asignacion_aulas.each do |asignacion_aula| %>
      <tr>
        <td><%= asignacion_aula.facultad_id %></td>
        <td><%= asignacion_aula.registro_carrera_id %></td>
        <td><%= asignacion_aula.anho_carrera_id %></td>
        <td><%= asignacion_aula.observacion %></td>
        <td><%= link_to asignacion_aula,class:"btn btn-success"  do %>
            <i class="glyphicon glyphicon-eye-open"></i>
           <% end %> </td>

        <td><%= link_to edit_asignacion_aula_path(asignacion_aula), class:" btn btn-info" do  %> 
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %></td>


        <td><%= link_to asignacion_aula, method: :delete, data: { confirm: 'Estas Seguro?' }, class:'btn btn-danger' do %> 
             <i class="glyphicon glyphicon-trash"></i>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<button type="button" class="btn btn-info"><%= link_to 'Nueva Asignacion Aula', new_asignacion_aula_path %></button>