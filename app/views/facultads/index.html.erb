<p id="notice"><%= notice %></p>

<div class="container">
<h2 class="text-center text-muted">Facultades</h2>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facultads.each do |facultad| %>
      <tr>
        <td><%= facultad.nombre %></td>
        <td><%= link_to 'Ver', facultad %></td>
        <td><%= link_to 'Editar', edit_facultad_path(facultad) %></td>
        <td><%= link_to 'Eliminar', facultad, method: :delete, data: { confirm: 'Estas Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-danger"><%= link_to 'Nuevo', new_facultad_path %></button>