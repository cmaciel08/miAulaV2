<p id="notice"><%= notice %></p>
<div class="container">
  <h2 class="text-center text-muted">Registro de Carrera</h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Carrera</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registro_carreras.each do |registro_carrera| %>
      <tr>
        <td><%= registro_carrera.nombreCarrera %></td>

        <td><%= link_to registro_carrera, class:"btn btn-success"  do %>
            <i class="glyphicon glyphicon-eye-open"></i>
           <% end %> </td>


        <td><%= link_to edit_registro_carrera_path(registro_carrera), class:" btn btn-info" do  %> 
              <i class="glyphicon glyphicon-pencil"></i>
            <% end %> </td>


        <td><%= link_to registro_carrera, method: :delete, data: { confirm: 'Estas Seguro?' }, class:'btn btn-danger' do %> 
             <i class="glyphicon glyphicon-trash"></i>
          <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-danger"><%= link_to 'Nuevo', new_registro_carrera_path %></button>
